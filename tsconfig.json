{
    "include": ["src/**/*"],
    "ts-node": {
        // Tell ts-node CLI to install the --loader automatically
        "esm": true
    },
    "compilerOptions": {
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "module": "CommonJS",
        "target": "ES2020",
        "outDir": "dist",
        "lib": ["ES2020"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "exclude": ["node_modules", "jest.config.ts", "db_setup.sql"],
}